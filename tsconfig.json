{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "strictNullChecks": true,
    "baseUrl": ".",
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "paths": {
      "@/components/*": ["src/components/*.astro"],
      "@/cc/*": ["src/components/client*.tsx"],
      "@/layouts/*": ["src/layouts/*.astro"],
      "@/utils/*": ["src/utils/*.ts"],
      "@/icons/*": ["src/icons/*"]
    }
  }
}
